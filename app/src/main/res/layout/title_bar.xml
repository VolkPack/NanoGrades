<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context="com.example.volks.nanogrades.StudentIdInput">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_text"
            android:layout_marginTop="@dimen/general_padding"
            android:layout_marginLeft="@dimen/general_padding"
            android:text = "@string/id"
            android:textColor="@color/defaultText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studentId"
            android:layout_marginTop="@dimen/general_padding"
            android:layout_marginLeft="@dimen/general_padding"
            android:textColor="@color/defaultText"
            tools:text="999999999"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/listView"
        android:id="@+id/titleView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:padding="@dimen/general_padding"
            android:text="@string/idTitle"
            android:textColor="@color/defaultText"
            android:id="@+id/idTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColor="@color/defaultText"
            android:paddingLeft="@dimen/general_padding"
            android:text="@string/nameTitle"
            android:id="@+id/nameTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:textColor="@color/defaultText"
            android:paddingLeft="@dimen/general_padding"
            android:text="@string/gradeTitle"
            android:id="@+id/gradeTitle"/>

    </LinearLayout>
</LinearLayout>